<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Draws Ramp Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="RampWaveIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M0,5 L5,0 L5,10 L10,5" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>

    <!-- Draws Rectified Sine Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="RectSineWaveIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M0,11 Q2,0 5,15 M5,15 Q8,0 10,11" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>
    
    <!-- Draws Sawtooth Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="SawtoothWaveIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M0,5 L5,10 L5,0 L10,5" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>
    
    <!-- Draws Sine Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="SineWaveIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M2,9 Q4,1 6,9 T10,9" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>

    <!-- Draws Square Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="SquareWaveIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M0,5 L0,0 L5,0 L5,10 L10,10 L10,5" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>
    
    <!-- Draws Triangle Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="TriWaveIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M0,5 L3,0 L7,10 L10,5" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>

    <!-- Draws Circle Icon on buttons, etc. -->
    <Viewbox x:Key="CircleIcon" Margin="1,4,1,4" x:Shared="false">
        <Ellipse
          Canvas.Top="0"
          Canvas.Left="0"
          Fill="Transparent"
          Height="10"
          Width="10"
          StrokeThickness="1"
          Stroke="Black"/>
    </Viewbox>

    <!-- Draws Triangle Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="DiamondIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M0,5 L5,10 L10,5 L5,0 z" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>

    <!-- Draws Triangle Waveform Icon on buttons, etc. -->
    <Viewbox x:Key="TriangleIcon" Margin="1,4,1,4" x:Shared="false">
        <Path Data="M5,0 L10,10 L0,10 z" Stretch="Uniform" Stroke="Black" StrokeThickness="1" />
    </Viewbox>

</ResourceDictionary>