<UserControl d:DesignHeight="710" 
             d:DesignWidth="490"
             mc:Ignorable="d" 
             x:Class="Laserocitor.UserControls.RadialScanGenerator.RadialScanGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:joystickControl="clr-namespace:JoystickControl;assembly=JoystickControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rotaryControl="clr-namespace:RotaryControl;assembly=RotaryControl"             
             xmlns:system="clr-namespace:System;assembly=mscorlib"            
             xmlns:toggleSwitchControl="clr-namespace:ToggleSwitchControl;assembly=ToggleSwitchControl"
             xmlns:waveformSelector="clr-namespace:Laserocitor.UserControls.WaveformSelector"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 <!-- Primary container. -->
 <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}"
		           Height="Auto"
		           HorizontalAlignment="Center" 
		           Margin="0,0,0,0"
		           Orientation="Vertical"
             ToolTip="{StaticResource RS_ToolTipText_RSS}"
		           VerticalAlignment="Center"
		           Width="Auto">
  
  <GroupBox Background="Transparent" 
			         BorderBrush="Cyan"
			         Foreground="Cyan"
			         Header="{Binding SectionTitleText, Mode=TwoWay}"
			         Height="720"
			         Margin="0,0,0,0"
			         Style="{DynamicResource GroupBoxStyle1}"
			         VerticalAlignment="Center"                  
			         Width="480"
			         x:Name="SectionGroupBox">

   <!-- Controls container. -->
   <StackPanel HorizontalAlignment="Center" 
               Margin="0,0,0,0"
               Orientation="Horizontal">
    
    <!-- Base Geometry and Perspective sub-sections container. -->
    <StackPanel HorizontalAlignment="Center" 
                Margin="0,10,0,0"
                Orientation="Vertical">
     
     <!-- Base Geometry sub-section. -->
     <Border Background="{StaticResource SubSectionBackground}" 
						       BorderBrush="{StaticResource SubSectionBorder}" 
						       BorderThickness="1" 
						       CornerRadius="10" 
						       Height="Auto" 
						       HorizontalAlignment="Center"  
						       Margin="0,0,0,0" 
						       ToolTip="{StaticResource RS_ToolTipText_BGS}"
						       VerticalAlignment="Top"
						       Width="230">
      <StackPanel HorizontalAlignment="Center" 
                  Margin="0,0,0,0" 
							           Orientation="Vertical">
       <Label Content="BASE GEOMETRY" 
								      FontFamily="Vrinda"
								      Foreground="White"
								      HorizontalAlignment="Center" 
								      Margin="0,0,0,0" 
								      VerticalAlignment="Top" />
       
       <!-- Buttons container. -->
       <StackPanel HorizontalAlignment="Center"
                   Margin="10,0,5,0"
                   Orientation="Horizontal" 
                   VerticalAlignment="Center">
        <Button Background="{Binding CircleBtnBgndBrush}" 
                Click="CircleBtnClkd"
                Height="40"
                Margin="0,0,1,0" 
                Style="{StaticResource WaveButtonStyle}" 
                ToolTip="{StaticResource RS_ToolTipText_CB}"
                Width="40"
                x:Name="CircleBtn">
         <ContentPresenter Content="{StaticResource CircleIcon}" Width="29" />
        </Button>
        <Button Background="{Binding DiamondBtnBgndBrush}" 
                Click="DiamondBtnClkd"
                Height="40"
                Margin="0,0,1,0" 
                Style="{StaticResource WaveButtonStyle}" 
                ToolTip="{StaticResource RS_ToolTipText_DB}"
                Width="40"
                x:Name="DiamondBtn">
         <ContentPresenter Content="{StaticResource DiamondIcon}" Width="29" />
        </Button>
        <Button Background="{Binding TriangleBtnBgndBrush}" 
                Click="TriangleBtnClkd"
                Height="40"
                Style="{StaticResource WaveButtonStyle}" 
                ToolTip="{StaticResource RS_ToolTipText_TB}"
                Width="40"
                x:Name="TriangleBtn">
         <ContentPresenter Content="{StaticResource TriangleIcon}" Width="29" />
        </Button>
        <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                        HorizontalAlignment="Left" 
									                                        SwitchOn="True"
									                                        ControlEnabled="True"
									                                        LEDOffColor="eLEDYellow"
									                                        LEDOnColor="eLEDOrange"
									                                        LegendBrush="White"
									                                        LegendFontSize="10"
                                                 Margin="10,0,0,0"
                                                 OffLabelText="CW"
                                                 OnLabelText="CCW"
									                                        SwitchLegendText="DIRECTION"
									                                        SwitchSize="32"
									                                        TBClkd="RSBGDirTSClkd"
									                                        ToolTip="{StaticResource RS_ToolTipText_BGDTS}"
									                                        Width="80"
									                                        x:Name="RSBGDirTS"/>
       </StackPanel>
       
       <!-- Base Geometery Frequency and Amplitude controls container. -->
       <StackPanel HorizontalAlignment="Center"
                   Orientation="Horizontal" 
                   VerticalAlignment="Top">
        <rotaryControl:RotaryControl Background="Transparent"             
								                             ControlEnabled="True"
								                             EndAngleInDegrees="135"
								                             FontBrush="White"                                                       
								                             Height="205"
								                             HorizontalAlignment="Center"                                                     
								                             LabelDialRadius="60"
								                             LegendBrush="White"
								                             LegendFontSize="18"
								                             LegendText="SCAN RATE"
								                             MajorTickBrush="White"
								                             MajorTickDialRadius="60"
								                             MajorTickIncrement="1000"
                                     Margin="0,0,0,0"
								                             MinimumValue="0"
								                             MinorTickBrush="LightGray"
								                             MinorTickDialRadius="50"
								                             NumberOfMajorTicks="11"
								                             NumberOfMinorTicks="2"
								                             PointerAxleFillActive="#00FF00"
								                             PointerAxleFillInactive="#FF0000"  
								                             PointerType="arrow"
								                             Size="0.5"
								                             StartAngleInDegrees="225"
								                             ToolTip="{StaticResource RS_ToolTipText_BGFRC}"
								                             Value="{Binding RSBGFrequency, Mode=TwoWay}"
								                             VerticalAlignment="Top"
								                             Width="180"                                                                 
								                             x:Name="RSBGFrequencyRC">

         <rotaryControl:RotaryControl.PointerFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="#000000" Offset="0"/>
           <GradientStop Color="#0000FF" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.PointerFill>

         <rotaryControl:RotaryControl.InnerDialRadius>
          <system:Double>40</system:Double>
         </rotaryControl:RotaryControl.InnerDialRadius>
         <rotaryControl:RotaryControl.InnerDialFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="DodgerBlue" Offset="0"/>
           <GradientStop Color="Blue" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.InnerDialFill>

         <rotaryControl:RotaryControl.OuterDialBorderThickness>
          <system:Double>2</system:Double>
         </rotaryControl:RotaryControl.OuterDialBorderThickness>
         <rotaryControl:RotaryControl.OuterDialFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="Black" Offset="0"/>
           <GradientStop Color="DarkBlue" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.OuterDialFill>
         <rotaryControl:RotaryControl.LayoutTransform>
          <ScaleTransform  ScaleX="{Binding Size, ElementName=RSBGFrequencyRC}" 
										                 ScaleY="{Binding Size, ElementName=RSBGFrequencyRC}"/>
         </rotaryControl:RotaryControl.LayoutTransform>
        </rotaryControl:RotaryControl>
        <rotaryControl:RotaryControl Background="Transparent"             
								                             ControlEnabled="True"
								                             EndAngleInDegrees="135"
								                             FontBrush="White"                                                       
								                             Height="200"
                                     HideFineTuneButtons="True"
								                             HorizontalAlignment="Center"                                                     
								                             LabelDialRadius="60"
								                             LegendBrush="White"
								                             LegendFontSize="18"
								                             LegendText="SIZE"
								                             MajorTickBrush="White"
								                             MajorTickDialRadius="60"
								                             MajorTickIncrement="100"
                                     Margin="0,0,0,0"
								                             MinimumValue="0"
								                             MinorTickBrush="LightGray"
								                             MinorTickDialRadius="50"
								                             NumberOfMajorTicks="11"
								                             NumberOfMinorTicks="2"
								                             PointerAxleFillActive="#00FF00"
								                             PointerAxleFillInactive="#FF0000"  
								                             PointerType="arrow"
								                             Size="0.5"
								                             StartAngleInDegrees="225"
								                             ToolTip="{StaticResource RS_ToolTipText_BGLRC}"
								                             Value="{Binding RSBGAmplitude, Mode=TwoWay}"
								                             VerticalAlignment="Top"
								                             Width="180"                                                                 
								                             x:Name="RSBGAmplitudeRC">

         <rotaryControl:RotaryControl.PointerFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="#000000" Offset="0"/>
           <GradientStop Color="#0000FF" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.PointerFill>

         <rotaryControl:RotaryControl.InnerDialRadius>
          <system:Double>40</system:Double>
         </rotaryControl:RotaryControl.InnerDialRadius>
         <rotaryControl:RotaryControl.InnerDialFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="DodgerBlue" Offset="0"/>
           <GradientStop Color="Blue" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.InnerDialFill>

         <rotaryControl:RotaryControl.OuterDialBorderThickness>
          <system:Double>2</system:Double>
         </rotaryControl:RotaryControl.OuterDialBorderThickness>
         <rotaryControl:RotaryControl.OuterDialFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="Black" Offset="0"/>
           <GradientStop Color="DarkBlue" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.OuterDialFill>
         <rotaryControl:RotaryControl.LayoutTransform>
          <ScaleTransform  ScaleX="{Binding Size, ElementName=RSBGAmplitudeRC}" 
										                 ScaleY="{Binding Size, ElementName=RSBGAmplitudeRC}"/>
         </rotaryControl:RotaryControl.LayoutTransform>
        </rotaryControl:RotaryControl>                          
       </StackPanel>

       <!-- Base Geometery Phase control container. -->
       <StackPanel HorizontalAlignment="Center"
                   Margin="0,0,0,5"
                   Orientation="Horizontal" 
                   VerticalAlignment="Top">
        <rotaryControl:RotaryControl Background="Transparent"             
								                             ControlEnabled="True"
								                             EndAngleInDegrees="135"
								                             FontBrush="White"                                                       
								                             Height="200"
                                     HideFineTuneButtons="True"
								                             HorizontalAlignment="Center"                                                     
								                             LabelDialRadius="60"
                                     LabelMaxDigits="3"
								                             LegendBrush="White"
								                             LegendFontSize="18"
								                             LegendText="SIN/COS PHASE"
								                             MajorTickBrush="White"
								                             MajorTickDialRadius="60"
								                             MajorTickIncrement="45"
                                     Margin="0,0,0,0"
								                             MinimumValue="-45"
								                             MinorTickBrush="LightGray"
								                             MinorTickDialRadius="50"
								                             NumberOfMajorTicks="3"
								                             NumberOfMinorTicks="2"
								                             PointerAxleFillActive="#00FF00"
								                             PointerAxleFillInactive="#FF0000"  
								                             PointerType="arrow"
								                             Size="0.4"
								                             StartAngleInDegrees="225"
								                             ToolTip="{StaticResource RS_ToolTipText_BGPRC}"
								                             Value="{Binding RSBGPhase, Mode=TwoWay}"
								                             VerticalAlignment="Top"
								                             Width="180"                                                                 
								                             x:Name="RSBGPhaseRC">

         <rotaryControl:RotaryControl.PointerFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="#000000" Offset="0"/>
           <GradientStop Color="#0000FF" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.PointerFill>

         <rotaryControl:RotaryControl.InnerDialRadius>
          <system:Double>40</system:Double>
         </rotaryControl:RotaryControl.InnerDialRadius>
         <rotaryControl:RotaryControl.InnerDialFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="DodgerBlue" Offset="0"/>
           <GradientStop Color="Blue" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.InnerDialFill>

         <rotaryControl:RotaryControl.OuterDialBorderThickness>
          <system:Double>2</system:Double>
         </rotaryControl:RotaryControl.OuterDialBorderThickness>
         <rotaryControl:RotaryControl.OuterDialFill>
          <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
           <GradientStop Color="Black" Offset="0"/>
           <GradientStop Color="DarkBlue" Offset="1.0"/>
          </LinearGradientBrush>
         </rotaryControl:RotaryControl.OuterDialFill>
         <rotaryControl:RotaryControl.LayoutTransform>
          <ScaleTransform  ScaleX="{Binding Size, ElementName=RSBGPhaseRC}" 
										                 ScaleY="{Binding Size, ElementName=RSBGPhaseRC}"/>
         </rotaryControl:RotaryControl.LayoutTransform>
        </rotaryControl:RotaryControl>
       </StackPanel>
      </StackPanel>
     </Border>

     <!-- Perspective sub-section. -->
     <Border Background="{StaticResource SubSectionBackground}" 
						       BorderBrush="{StaticResource SubSectionBorder}" 
						       BorderThickness="1" 
						       CornerRadius="10" 
						       Height="Auto" 
						       HorizontalAlignment="Center"  
						       Margin="0,5,0,0" 
						       ToolTip="{StaticResource RS_ToolTipText_PS}"
						       Width="230">
      <StackPanel Margin="0,0,0,0" 
							           Orientation="Vertical">
       <Label Content="PERSPECTIVE" 
								      FontFamily="Vrinda"
								      Foreground="White"
								      HorizontalAlignment="Center" 
								      Margin="0,0,0,0" 
								      VerticalAlignment="Top" />
              
       <!-- Joystick container. -->       
       <StackPanel Margin="0,0,0,0" 
							            Orientation="Vertical">
        <joystickControl:Joystick AngleStep="1" 
                                  DistanceStep="1"
                                  Height="120" 
                		                HorizontalAlignment="Center" 
                                  PresetX="{Binding PersPresetX, Mode=TwoWay}"
                                  PresetY="{Binding PersPresetX, Mode=TwoWay}"
                                  ResetKnobAfterRelease="false"
                		                Margin="5" 
                                  ToolTip="{StaticResource RS_ToolTipText_PJS}"
                		                VerticalAlignment="Center"
                		                Width="120"                                                 
                                  x:Name="PerspectiveStick"
                                  X="{Binding JSXPos, Mode=TwoWay}"
                                  Y="{Binding JSYPos, Mode=TwoWay}" />
       </StackPanel>

       <!-- Auto Perspective sub-sub-section container. -->
       <StackPanel HorizontalAlignment="Center" 
                   Margin="0,0,0,0"
                   Orientation="Vertical">

        <!-- Auto Perspective sub-sub-section. -->
        <Border Background="{StaticResource SubSubSectionBackground}" 
						          BorderBrush="{StaticResource SubSubSectionBorder}" 
						          BorderThickness="1" 
						          CornerRadius="10" 
						          Height="Auto" 
						          HorizontalAlignment="Center"  
						          Margin="0,10,0,5" 
						          ToolTip="{StaticResource RS_ToolTipText_APS}"
						          VerticalAlignment="Top"
						          Width="220">
         <StackPanel Margin="0,0,0,0" 
							              Orientation="Vertical">
          <Label Content="AUTO" 
								         FontFamily="Vrinda"
								         Foreground="White"
								         HorizontalAlignment="Center" 
								         Margin="0,0,0,0" 
								         VerticalAlignment="Top" />

          <!-- Buttons container. -->
          <StackPanel HorizontalAlignment="Center"
                      Margin="5,0,5,0"
                      Orientation="Horizontal" 
                      VerticalAlignment="Center">
           <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                           HorizontalAlignment="Left" 
									                                           SwitchOn="True"
									                                           ControlEnabled="True"
									                                           LEDOffColor="eLEDRed"
									                                           LEDOnColor="eLEDGreen"
									                                           LegendBrush="White"
									                                           LegendFontSize="10"
                                                    Margin="0,0,0,0"
									                                           SwitchLegendText="AUTO"
									                                           SwitchSize="32"
									                                           TBClkd="PersModEnableTSClkd"
									                                           ToolTip="{StaticResource RS_ToolTipText_APTS}"
									                                           Width="90"
									                                           x:Name="AutoPerspectiveEnableTS"/>
           <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                           HorizontalAlignment="Left" 
									                                           SwitchOn="True"
									                                           ControlEnabled="True"
									                                           LEDOffColor="eLEDRed"
									                                           LEDOnColor="eLEDGreen"
									                                           LegendBrush="White"
									                                           LegendFontSize="10"
                                                    OffLabelText="CW"
                                                    OnLabelText="CCW"
                                                    Margin="0,0,0,0"
									                                           SwitchLegendText="DIRECTION"
									                                           SwitchSize="32"
									                                           TBClkd="PersModDirTSClkd"
									                                           ToolTip="{StaticResource RS_ToolTipText_APDTS}"
									                                           Width="90"
									                                           x:Name="AutpPerspectiveDirTS"/>           
          </StackPanel>

          <!-- Auto Perspective Rate and Level controls container. -->
          <StackPanel HorizontalAlignment="Center"
                      Margin="0,0,0,5"
                      Orientation="Horizontal" 
                      VerticalAlignment="Top">
           <rotaryControl:RotaryControl Background="Transparent"             
								                                ControlEnabled="True"
								                                EndAngleInDegrees="135"
								                                FontBrush="White"                                                       
								                                Height="205"
								                                HorizontalAlignment="Center"                                                     
								                                LabelDialRadius="60"
                                        LabelMaxDigits="3"
								                                LegendBrush="White"
								                                LegendFontSize="18"
								                                LegendText="FREQUENCY"
								                                MajorTickBrush="White"
								                                MajorTickDialRadius="60"
								                                MajorTickIncrement="10000"
                                        Margin="0,0,0,0"
								                                MinimumValue="0"
								                                MinorTickBrush="LightGray"
								                                MinorTickDialRadius="50"
								                                NumberOfMajorTicks="11"
								                                NumberOfMinorTicks="2"
								                                PointerAxleFillActive="#00FF00"
								                                PointerAxleFillInactive="#FF0000"  
								                                PointerType="arrow"
								                                Size="0.5"
								                                StartAngleInDegrees="225"
								                                ToolTip="{StaticResource RS_ToolTipText_APRRC}"
								                                Value="{Binding RSPersModFrequency, Mode=TwoWay}"
								                                VerticalAlignment="Top"
								                                Width="180"                                                                 
								                                x:Name="RSPersModFrequencyRC">

            <rotaryControl:RotaryControl.PointerFill>
             <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
              <GradientStop Color="#000000" Offset="0"/>
              <GradientStop Color="#0000FF" Offset="1.0"/>
             </LinearGradientBrush>
            </rotaryControl:RotaryControl.PointerFill>

            <rotaryControl:RotaryControl.InnerDialRadius>
             <system:Double>40</system:Double>
            </rotaryControl:RotaryControl.InnerDialRadius>
            <rotaryControl:RotaryControl.InnerDialFill>
             <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
              <GradientStop Color="DodgerBlue" Offset="0"/>
              <GradientStop Color="Blue" Offset="1.0"/>
             </LinearGradientBrush>
            </rotaryControl:RotaryControl.InnerDialFill>

            <rotaryControl:RotaryControl.OuterDialBorderThickness>
             <system:Double>2</system:Double>
            </rotaryControl:RotaryControl.OuterDialBorderThickness>
            <rotaryControl:RotaryControl.OuterDialFill>
             <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
              <GradientStop Color="Black" Offset="0"/>
              <GradientStop Color="DarkBlue" Offset="1.0"/>
             </LinearGradientBrush>
            </rotaryControl:RotaryControl.OuterDialFill>
            <rotaryControl:RotaryControl.LayoutTransform>
             <ScaleTransform  ScaleX="{Binding Size, ElementName=RSPersModFrequencyRC}" 
										                    ScaleY="{Binding Size, ElementName=RSPersModFrequencyRC}"/>
            </rotaryControl:RotaryControl.LayoutTransform>
           </rotaryControl:RotaryControl>
           <rotaryControl:RotaryControl Background="Transparent"             
								                                ControlEnabled="True"
								                                EndAngleInDegrees="135"
								                                FontBrush="White"                                                       
								                                Height="200"
                                        HideFineTuneButtons="True"
								                                HorizontalAlignment="Center"                                                     
								                                LabelDialRadius="60"
                                        LabelMaxDigits="3"
								                                LegendBrush="White"
								                                LegendFontSize="18"
								                                LegendText="AMPLITUDE"
								                                MajorTickBrush="White"
								                                MajorTickDialRadius="60"
								                                MajorTickIncrement="100"
                                        Margin="0,0,0,0"
								                                MinimumValue="0"
								                                MinorTickBrush="LightGray"
								                                MinorTickDialRadius="50"
								                                NumberOfMajorTicks="11"
								                                NumberOfMinorTicks="2"
								                                PointerAxleFillActive="#00FF00"
								                                PointerAxleFillInactive="#FF0000"  
								                                PointerType="arrow"
								                                Size="0.5"
								                                StartAngleInDegrees="225"
								                                ToolTip="{StaticResource RS_ToolTipText_APLRC}"
								                                Value="{Binding RSPersModLevel, Mode=TwoWay}"
								                                VerticalAlignment="Top"
								                                Width="180"                                                                 
								                                x:Name="RSPersModLevelRC">

            <rotaryControl:RotaryControl.PointerFill>
             <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
              <GradientStop Color="#000000" Offset="0"/>
              <GradientStop Color="#0000FF" Offset="1.0"/>
             </LinearGradientBrush>
            </rotaryControl:RotaryControl.PointerFill>

            <rotaryControl:RotaryControl.InnerDialRadius>
             <system:Double>40</system:Double>
            </rotaryControl:RotaryControl.InnerDialRadius>
            <rotaryControl:RotaryControl.InnerDialFill>
             <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
              <GradientStop Color="DodgerBlue" Offset="0"/>
              <GradientStop Color="Blue" Offset="1.0"/>
             </LinearGradientBrush>
            </rotaryControl:RotaryControl.InnerDialFill>

            <rotaryControl:RotaryControl.OuterDialBorderThickness>
             <system:Double>2</system:Double>
            </rotaryControl:RotaryControl.OuterDialBorderThickness>
            <rotaryControl:RotaryControl.OuterDialFill>
             <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
              <GradientStop Color="Black" Offset="0"/>
              <GradientStop Color="DarkBlue" Offset="1.0"/>
             </LinearGradientBrush>
            </rotaryControl:RotaryControl.OuterDialFill>
            <rotaryControl:RotaryControl.LayoutTransform>
             <ScaleTransform  ScaleX="{Binding Size, ElementName=RSPersModLevelRC}" 
										                    ScaleY="{Binding Size, ElementName=RSPersModLevelRC}"/>
            </rotaryControl:RotaryControl.LayoutTransform>
           </rotaryControl:RotaryControl>
          </StackPanel>

         </StackPanel>
        </Border>
        <StackPanel Orientation="Vertical">

        </StackPanel>
       </StackPanel>
      </StackPanel>
     </Border>
    </StackPanel>

    <!-- Radiator and Color Sync sub-sections container. -->
    <StackPanel HorizontalAlignment="Center" 
                Margin="5,0,0,0"
                Orientation="Vertical">
     
     <!-- Radiator sub-section. -->
     <Border Background="{StaticResource SubSectionBackground}" 
						       BorderBrush="{StaticResource SubSectionBorder}" 
						       BorderThickness="1" 
						       CornerRadius="10" 
						       Height="Auto" 
						       HorizontalAlignment="Center"  
						       Margin="0,10,0,0" 
						       ToolTip="{StaticResource RS_ToolTipText_RS}"
						       VerticalAlignment="Top"
						       Width="230">
      <StackPanel Margin="0,0,0,0" 
							           Orientation="Vertical">
       <Label Content="RADIATOR" 
								      FontFamily="Vrinda"
								      Foreground="White"
								      HorizontalAlignment="Center" 
								      Margin="0,0,0,0" 
								      VerticalAlignment="Top" />

       <!-- Buttons container. -->
       <StackPanel HorizontalAlignment="Center"
                   Margin="5,0,5,0"
                   Orientation="Horizontal" 
                   VerticalAlignment="Center">
        <waveformSelector:WaveformSelector Margin="0,0,0,0"
                                           WaveformSelected="OnRadiatorWaveformSelected"
								                                   Waveform="{Binding RSRadiatorWaveform, Mode=TwoWay}"
			 				                                   x:Name="RS_RadiatorWaveformWS" />
        <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                        HorizontalAlignment="Left" 
									                                        SwitchOn="True"
									                                        ControlEnabled="True"
									                                        LEDOffColor="eLEDRed"
									                                        LEDOnColor="eLEDGreen"
									                                        LegendBrush="White"
									                                        LegendFontSize="10"
                                                 Margin="10,0,0,0"
									                                        SwitchLegendText="RADIATOR AM"
									                                        SwitchSize="32"
									                                        TBClkd="AMEnableTSClkd"
									                                        ToolTip="{StaticResource RS_ToolTipText_AMETS}"
									                                        Width="90"
									                                        x:Name="AMEnableTS"/>
       </StackPanel>

       <!-- Radiator Rate and Level controls container. -->
       <StackPanel HorizontalAlignment="Center"
                   Margin="0,0,0,5"
                   Orientation="Horizontal" 
                   VerticalAlignment="Top">
        <rotaryControl:RotaryControl Background="Transparent"             
								                             ControlEnabled="True"
								                             EndAngleInDegrees="135"
								                             FontBrush="White"                                                       
								                             Height="205"
								                             HorizontalAlignment="Center"                                                     
								                             LabelDialRadius="60"
								                             LegendBrush="White"
								                             LegendFontSize="18"
