<UserControl d:DesignHeight="640" 
             d:DesignWidth="280"
             mc:Ignorable="d"
             x:Class="Laserocitor.UserControls.SpiralGenerator.SpiralGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:joystickControl="clr-namespace:JoystickControl;assembly=JoystickControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rotaryControl="clr-namespace:RotaryControl;assembly=RotaryControl" 
             xmlns:system="clr-namespace:System;assembly=mscorlib"    
             xmlns:toggleSwitchControl="clr-namespace:ToggleSwitchControl;assembly=ToggleSwitchControl"             
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Spiral Generator Section primary container. -->
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                Height="Auto"
                HorizontalAlignment="Center"
                Margin="0,2,0,-2" 
                Orientation="Vertical" 
                x:Name="SpiralGeneratorContainer">
        <GroupBox Background="Transparent" 
                  BorderBrush="Cyan"
                  Foreground="Cyan"
                  Header="SPIRAL GENERATOR"
                  Height="640"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,0"
                  Style="{StaticResource GroupBoxStyle1}"
                  ToolTip="{StaticResource SG_ToolTipText_SGS}"
                  VerticalAlignment="Top"                  
                  Width="280"
                  x:Name="SectionGroupBox">

            <!-- Container for all of the buttons. -->
            <StackPanel Height="Auto"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                <StackPanel Height="Auto"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <rotaryControl:RotaryControl Background="Transparent"             
                                                 ControlEnabled="True"
                                                 EndAngleInDegrees="135"
                                                 FontBrush="White"                                                       
                                                 Height="205"
                                                 HorizontalAlignment="Center"                                                     
                                                 LabelDialRadius="60"
                                                 LegendBrush="White"
                                                 LegendFontSize="18"
                                                 LegendText="Size"
                                                 MajorTickBrush="White"
                                                 MajorTickDialRadius="60"
                                                 MajorTickIncrement="1000"
                                                 Margin="0,0,0,0"
                                                 MinimumValue="0"
                                                 MinorTickBrush="LightGray"
                                                 MinorTickDialRadius="50"
                                                 NumberOfMajorTicks="11"
                                                 NumberOfMinorTicks="2"
                                                 PointerAxleFillActive="#00FF00"
                                                 PointerAxleFillInactive="#FF0000"  
                                                 PointerType="arrow"
                                                 Size="0.6"
                                                 StartAngleInDegrees="225"
                                                 ToolTip="{StaticResource SG_ToolTipText_SRC}"
                                                 Value="{Binding SGSize, Mode=TwoWay}"
                                                 VerticalAlignment="Top"
                                                 Width="180"                                                                 
                                                 x:Name="SGSizeRC">

                        <rotaryControl:RotaryControl.PointerFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#000000" Offset="0"/>
                                <GradientStop Color="#0000FF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.PointerFill>

                        <rotaryControl:RotaryControl.InnerDialRadius>
                            <system:Double>40</system:Double>
                        </rotaryControl:RotaryControl.InnerDialRadius>
                        <rotaryControl:RotaryControl.InnerDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="DodgerBlue" Offset="0"/>
                                <GradientStop Color="Blue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.InnerDialFill>

                        <rotaryControl:RotaryControl.OuterDialBorderThickness>
                            <system:Double>2</system:Double>
                        </rotaryControl:RotaryControl.OuterDialBorderThickness>
                        <rotaryControl:RotaryControl.OuterDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="DarkBlue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.OuterDialFill>
                        <rotaryControl:RotaryControl.LayoutTransform>
                            <ScaleTransform  ScaleX="{Binding Size, ElementName=SGSizeRC}" 
		                                           ScaleY="{Binding Size, ElementName=SGSizeRC}"/>
                        </rotaryControl:RotaryControl.LayoutTransform>
                    </rotaryControl:RotaryControl>
                                        
                    <rotaryControl:RotaryControl Background="Transparent"             
                                                 ControlEnabled="True"
                                                 EndAngleInDegrees="135"
                                                 FontBrush="White"                                                       
                                                 Height="205"
                                                 HorizontalAlignment="Center"                                                     
                                                 LabelDialRadius="60"
                                                 LegendBrush="White"
                                                 LegendFontSize="18"
                                                 LegendText="RAMP RATE"
                                                 MajorTickBrush="White"
                                                 MajorTickDialRadius="60"
                                                 MajorTickIncrement="1000"
                                                 Margin="0,0,0,0"
                                                 MinimumValue="0"
                                                 MinorTickBrush="LightGray"
                                                 MinorTickDialRadius="50"
                                                 NumberOfMajorTicks="11"
                                                 NumberOfMinorTicks="2"
                                                 PointerAxleFillActive="#00FF00"
                                                 PointerAxleFillInactive="#FF0000"  
                                                 PointerType="arrow"
                                                 Size="0.6"
                                                 StartAngleInDegrees="225"
                                                 ToolTip="{StaticResource SG_ToolTipText_RFRC}"
                                                 Value="{Binding SGRampFrequency, Mode=TwoWay}"
                                                 VerticalAlignment="Top"
                                                 Width="180"                                                                 
                                                 x:Name="SGRampFrequencyRC">

                        <rotaryControl:RotaryControl.PointerFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#000000" Offset="0"/>
                                <GradientStop Color="#0000FF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.PointerFill>

                        <rotaryControl:RotaryControl.InnerDialRadius>
                            <system:Double>40</system:Double>
                        </rotaryControl:RotaryControl.InnerDialRadius>
                        <rotaryControl:RotaryControl.InnerDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="DodgerBlue" Offset="0"/>
                                <GradientStop Color="Blue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.InnerDialFill>

                        <rotaryControl:RotaryControl.OuterDialBorderThickness>
                            <system:Double>2</system:Double>
                        </rotaryControl:RotaryControl.OuterDialBorderThickness>
                        <rotaryControl:RotaryControl.OuterDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="DarkBlue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.OuterDialFill>
                        <rotaryControl:RotaryControl.LayoutTransform>
                            <ScaleTransform  ScaleX="{Binding Size, ElementName=SGRampFrequencyRC}" 
		                                           ScaleY="{Binding Size, ElementName=SGRampFrequencyRC}"/>
                        </rotaryControl:RotaryControl.LayoutTransform>
                    </rotaryControl:RotaryControl>
                </StackPanel>
                
                <!-- Ramp Gain and Offset controls container. -->
                <StackPanel HorizontalAlignment="Center"
                            Margin="0,-5,0,0"
                            Orientation="Horizontal" 
                            VerticalAlignment="Top">
                    <rotaryControl:RotaryControl Background="Transparent"             
								                                         ControlEnabled="True"
								                                         EndAngleInDegrees="135"
								                                         FontBrush="White"                                                       
								                                         Height="200"
                                                 HideFineTuneButtons="True"
								                                         HorizontalAlignment="Center"                                                     
								                                         LabelDialRadius="60"
                                                 LabelMaxDigits="4"
								                                         LegendBrush="White"
								                                         LegendFontSize="18"
								                                         LegendText="GAIN"
								                                         MajorTickBrush="White"
								                                         MajorTickDialRadius="60"
								                                         MajorTickIncrement="20"
                                                 Margin="0,0,0,0"
								                                         MinimumValue="-100"
								                                         MinorTickBrush="LightGray"
								                                         MinorTickDialRadius="50"
								                                         NumberOfMajorTicks="11"
								                                         NumberOfMinorTicks="2"
								                                         PointerAxleFillActive="#00FF00"
								                                         PointerAxleFillInactive="#FF0000"  
								                                         PointerType="arrow"
								                                         Size="0.5"
								                                         StartAngleInDegrees="225"
								                                         ToolTip="{StaticResource SG_ToolTipText_RGRC}"
								                                         Value="{Binding SGRampGain, Mode=TwoWay}"
								                                         VerticalAlignment="Top"
								                                         Width="180"                                                                 
								                                         x:Name="SGRampGainRC">

                        <rotaryControl:RotaryControl.PointerFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#000000" Offset="0"/>
                                <GradientStop Color="#0000FF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.PointerFill>

                        <rotaryControl:RotaryControl.InnerDialRadius>
                            <system:Double>40</system:Double>
                        </rotaryControl:RotaryControl.InnerDialRadius>
                        <rotaryControl:RotaryControl.InnerDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="DodgerBlue" Offset="0"/>
                                <GradientStop Color="Blue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.InnerDialFill>

                        <rotaryControl:RotaryControl.OuterDialBorderThickness>
                            <system:Double>2</system:Double>
                        </rotaryControl:RotaryControl.OuterDialBorderThickness>
                        <rotaryControl:RotaryControl.OuterDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="DarkBlue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.OuterDialFill>
                        <rotaryControl:RotaryControl.LayoutTransform>
                            <ScaleTransform  ScaleX="{Binding Size, ElementName=SGRampGainRC}" 
										                                   ScaleY="{Binding Size, ElementName=SGRampGainRC}"/>
                        </rotaryControl:RotaryControl.LayoutTransform>
                    </rotaryControl:RotaryControl>

                    <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                                    HorizontalAlignment="Left" 
									                                                    SwitchOn="True"
									                                                    ControlEnabled="True"
									                                                    LEDOffColor="eLEDYellow"
									                                                    LEDOnColor="eLEDOrange"
									                                                    LegendBrush="White"
									                                                    LegendFontSize="10"
                                                             Margin="10,0,0,0"
                                                             OffLabelText="CW"
                                                             OnLabelText="CCW"
									                                                    SwitchLegendText="DIRECTION"
									                                                    SwitchSize="32"
									                                                    TBClkd="SGDirTSClkd"
									                                                    ToolTip="{StaticResource SG_ToolTipText_SDTS}"
									                                                    Width="80"
									                                                    x:Name="SGDirTS"/>

                    <rotaryControl:RotaryControl Background="Transparent"             
								                                         ControlEnabled="True"
								                                         EndAngleInDegrees="135"
								                                         FontBrush="White"                                                       
								                                         Height="200"
                                                 HideFineTuneButtons="True"
								                                         HorizontalAlignment="Center"                                                     
								                                         LabelDialRadius="60"
                                                 LabelMaxDigits="3"
								                                         LegendBrush="White"
								                                         LegendFontSize="18"
								                                         LegendText="OFFSET"
								                                         MajorTickBrush="White"
								                                         MajorTickDialRadius="60"
								                                         MajorTickIncrement="10"
                                                 Margin="0,0,0,0"
								                                         MinimumValue="-50"
								                                         MinorTickBrush="LightGray"
								                                         MinorTickDialRadius="50"
								                                         NumberOfMajorTicks="11"
								                                         NumberOfMinorTicks="2"
								                                         PointerAxleFillActive="#00FF00"
								                                         PointerAxleFillInactive="#FF0000"  
								                                         PointerType="arrow"
								                                         Size="0.5"
								                                         StartAngleInDegrees="225"
								                                         ToolTip="{StaticResource SG_ToolTipText_RORC}"
								                                         Value="{Binding SGRampOffset, Mode=TwoWay}"
								                                         VerticalAlignment="Top"
								                                         Width="180"                                                                 
								                                         x:Name="SGRampOffsetRC">

                        <rotaryControl:RotaryControl.PointerFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#000000" Offset="0"/>
                                <GradientStop Color="#0000FF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.PointerFill>

                        <rotaryControl:RotaryControl.InnerDialRadius>
                            <system:Double>40</system:Double>
                        </rotaryControl:RotaryControl.InnerDialRadius>
                        <rotaryControl:RotaryControl.InnerDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="DodgerBlue" Offset="0"/>
                                <GradientStop Color="Blue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.InnerDialFill>

                        <rotaryControl:RotaryControl.OuterDialBorderThickness>
                            <system:Double>2</system:Double>
                        </rotaryControl:RotaryControl.OuterDialBorderThickness>
                        <rotaryControl:RotaryControl.OuterDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="DarkBlue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.OuterDialFill>
                        <rotaryControl:RotaryControl.LayoutTransform>
                            <ScaleTransform  ScaleX="{Binding Size, ElementName=SGRampOffsetRC}" 
										                                   ScaleY="{Binding Size, ElementName=SGRampOffsetRC}"/>
                        </rotaryControl:RotaryControl.LayoutTransform>
                    </rotaryControl:RotaryControl>
                </StackPanel>

                <!-- Perspective sub-section. -->
                <Border Background="{StaticResource SubSectionBackground}" 
						                  BorderBrush="{StaticResource SubSectionBorder}" 
						                  BorderThickness="1" 
						                  CornerRadius="10" 
						                  Height="Auto" 
						                  HorizontalAlignment="Center"  
						                  Margin="0,10,0,0" 
						                  ToolTip="{StaticResource RS_ToolTipText_PS}"
						                  VerticalAlignment="Top"
						                  Width="250">
                    <StackPanel Margin="0,0,0,0" 
							                         Orientation="Vertical">
                        <Label Content="PERSPECTIVE" 
								                       FontFamily="Vrinda"
								                       Foreground="White"
								                       HorizontalAlignment="Center" 
								                       Margin="0,0,0,0" 
								                       VerticalAlignment="Top" />

                        <!-- Joystick container. -->
                        <StackPanel Margin="0,0,0,0" 
							                             Orientation="Vertical">
                            <joystickControl:Joystick AngleStep="1" 
                                                      DistanceStep="1"
                                                      Height="120" 
                		                                    HorizontalAlignment="Center" 
                                                      PresetX="{Binding SGPersPresetX, Mode=TwoWay}"
                                                      PresetY="{Binding SGPersPresetY, Mode=TwoWay}"
                                                      ResetKnobAfterRelease="false"
                		                                    Margin="5" 
                                                      ToolTip="{StaticResource SG_ToolTipText_PJS}"
                		                                    VerticalAlignment="Center"
                		                                    Width="120"                                                 
                                                      x:Name="SGPerspectiveStick"
                                                      X="{Binding SGPersJSXPos, Mode=TwoWay}"
                                                      Y="{Binding SGPersJSYPos, Mode=TwoWay}" />
                        </StackPanel>

                        <!-- Auto Perspective sub-sub-section container. -->
                        <StackPanel HorizontalAlignment="Center" 
                                    Margin="0,0,0,0"
                                    Orientation="Vertical">

                            <!-- Auto Perspective sub-sub-section. -->
                            <Border Background="{StaticResource SubSubSectionBackground}" 
						                              BorderBrush="{StaticResource SubSubSectionBorder}" 
						                              BorderThickness="1" 
						                              CornerRadius="10" 
						                              Height="Auto" 
						                              HorizontalAlignment="Center"  
						                              Margin="0,10,0,5" 
						                              ToolTip="{StaticResource RS_ToolTipText_APS}"
						                              VerticalAlignment="Top"
						                              Width="220">
                                <StackPanel Margin="0,0,0,0" 
							                                     Orientation="Vertical">
                                    <Label Content="AUTO" 
								                                   FontFamily="Vrinda"
								                                   Foreground="White"
								                                   HorizontalAlignment="Center" 
								                                   Margin="0,0,0,0" 
								                                   VerticalAlignment="Top" />

                                    <!-- Buttons container. -->
                                    <StackPanel HorizontalAlignment="Center"
                                                Margin="5,0,5,0"
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center">
                                        <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                                                        HorizontalAlignment="Left" 
									                                                                        SwitchOn="True"
									                                                                        ControlEnabled="True"
									                                                                        LEDOffColor="eLEDRed"
									                                                                        LEDOnColor="eLEDGreen"
									                                                                        LegendBrush="White"
									                                                                        LegendFontSize="10"
                                                                                 Margin="0,0,0,0"
									                                                                        SwitchLegendText="AUTO"
									                                                                        SwitchSize="32"
									                                                                        TBClkd="SGPersModEnableTSClkd"
									                                                                        ToolTip="{StaticResource SG_ToolTipText_APTS}"
									                                                                        Width="90"
									                                                                        x:Name="SGPersModEnableTS"/>
                                        
                                        <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                                                        HorizontalAlignment="Left" 
									                                                                        SwitchOn="True"
									                                                                        ControlEnabled="True"
									                                                                        LEDOffColor="eLEDRed"
									                                                                        LEDOnColor="eLEDGreen"
									                                                                        LegendBrush="White"
									                                                                        LegendFontSize="10"
                                                                                 OffLabelText="CW"
                                                                                 OnLabelText="CCW"
                                                                                 Margin="0,0,0,0"
									                                                                        SwitchLegendText="DIRECTION"
									                                                                        SwitchSize="32"
									                                                                        TBClkd="SGPersModDirTSClkd"
									                                                                        ToolTip="{StaticResource SG_ToolTipText_APDTS}"
									                                                                        Width="90"
									                                                                        x:Name="SGPersModDirTS"/>
                                    </StackPanel>

                                    <!-- Auto Perspective Rate and Level controls container. -->
                                    <StackPanel HorizontalAlignment="Center"
                                                Margin="0,0,0,5"
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Top">
                                        <rotaryControl:RotaryControl Background="Transparent"             
								                                                             ControlEnabled="True"
								                                                             EndAngleInDegrees="135"
								                                                             FontBrush="White"                                                       
								                                                             Height="205"
								                                                             HorizontalAlignment="Center"                                                     
								                                                             LabelDialRadius="60"
                                                                     LabelMaxDigits="3"
								                                                             LegendBrush="White"
								                                                             LegendFontSize="18"
								                                                             LegendText="FREQUENCY"
								                                                             MajorTickBrush="White"
								                                                             MajorTickDialRadius="60"
								                                                             MajorTickIncrement="10000"
                                                                     Margin="0,0,0,0"
								                                                             MinimumValue="0"
								                                                             MinorTickBrush="LightGray"
								                                                             MinorTickDialRadius="50"
								                                                             NumberOfMajorTicks="11"
								                                                             NumberOfMinorTicks="2"
								                                                             PointerAxleFillActive="#00FF00"
								                                                             PointerAxleFillInactive="#FF0000"  
								                                                             PointerType="arrow"
								                                                             Size="0.5"
								                                                             StartAngleInDegrees="225"
								                                                             ToolTip="{StaticResource SG_ToolTipText_APRRC}"
								                                                             Value="{Binding SGPersModFrequency, Mode=TwoWay}"
								                                                             VerticalAlignment="Top"
								                                                             Width="180"                                                                 
								                                                             x:Name="SGPersModFrequencyRC">

                                            <rotaryControl:RotaryControl.PointerFill>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="#000000" Offset="0"/>
                                                    <GradientStop Color="#0000FF" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </rotaryControl:RotaryControl.PointerFill>

                                            <rotaryControl:RotaryControl.InnerDialRadius>
                                                <system:Double>40</system:Double>
                                            </rotaryControl:RotaryControl.InnerDialRadius>
                                            <rotaryControl:RotaryControl.InnerDialFill>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="DodgerBlue" Offset="0"/>
                                                    <GradientStop Color="Blue" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </rotaryControl:RotaryControl.InnerDialFill>

                                            <rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                <system:Double>2</system:Double>
                                            </rotaryControl:RotaryControl.OuterDialBorderThickness>
                                            <rotaryControl:RotaryControl.OuterDialFill>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="DarkBlue" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </rotaryControl:RotaryControl.OuterDialFill>
                                            <rotaryControl:RotaryControl.LayoutTransform>
                                                <ScaleTransform  ScaleX="{Binding Size, ElementName=SGPersModFrequencyRC}" 
										                                                       ScaleY="{Binding Size, ElementName=SGPersModFrequencyRC}"/>
                                            </rotaryControl:RotaryControl.LayoutTransform>
                                        </rotaryControl:RotaryControl>
                                        
                                        <rotaryControl:RotaryControl Background="Transparent"             
								                                                             ControlEnabled="True"
								                                                             EndAngleInDegrees="135"
								                                                             FontBrush="White"                                                       
								                                                             Height="200"
                                                                     HideFineTuneButtons="True"
								                                                             HorizontalAlignment="Center"                                                     
								                                                             LabelDialRadius="60"
                                                                     LabelMaxDigits="3"
								                                                             LegendBrush="White"
								                                                             LegendFontSize="18"
								                                                             LegendText="AMPLITUDE"
								                                                             MajorTickBrush="White"
								                                                             MajorTickDialRadius="60"
								                                                             MajorTickIncrement="100"
                                                                     Margin="0,0,0,0"
								                                                             MinimumValue="0"
								                                                             MinorTickBrush="LightGray"
								                                                             MinorTickDialRadius="50"
								                                                             NumberOfMajorTicks="11"
								                                                             NumberOfMinorTicks="2"
								                                                             PointerAxleFillActive="#00FF00"
								                                                             PointerAxleFillInactive="#FF0000"  
								                                                             PointerType="arrow"
								                                                             Size="0.5"
								                                                             StartAngleInDegrees="225"
								                                                             ToolTip="{StaticResource SG_ToolTipText_APLRC}"
								                                                             Value="{Binding SGPersModLevel, Mode=TwoWay}"
								                                                             VerticalAlignment="Top"
								                                                             Width="180"                                                                 
								                                                             x:Name="SGPersModLevelRC">

                                            <rotaryControl:RotaryControl.PointerFill>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="#000000" Offset="0"/>
                                                    <GradientStop Color="#0000FF" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </rotaryControl:RotaryControl.PointerFill>

                                            <rotaryControl:RotaryControl.InnerDialRadius>
                                                <system:Double>40</system:Double>
                                            </rotaryControl:RotaryControl.InnerDialRadius>
                                            <rotaryControl:RotaryControl.InnerDialFill>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="DodgerBlue" Offset="0"/>
                                                    <GradientStop Color="Blue" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </rotaryControl:RotaryControl.InnerDialFill>

                                            <rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                <system:Double>2</system:Double>
                                            </rotaryControl:RotaryControl.OuterDialBorderThickness>
                                            <rotaryControl:RotaryControl.OuterDialFill>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="DarkBlue" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </rotaryControl:RotaryControl.OuterDialFill>
                                            <rotaryControl:RotaryControl.LayoutTransform>
                                                <ScaleTransform  ScaleX="{Binding Size, ElementName=SGPersModLevelRC}" 
										                                                       ScaleY="{Binding Size, ElementName=SGPersModLevelRC}"/>
                                            </rotaryControl:RotaryControl.LayoutTransform>
                                        </rotaryControl:RotaryControl>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <StackPanel Orientation="Vertical">

                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
