<!-- This user control provides the controls that affect the final image, including
     translation (position), rotation and size.                                       -->
    
<UserControl Height="400"
             mc:Ignorable="d" 
             x:Class="Laserocitor.UserControls.ImageParameters.ImageParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:joystickControl="clr-namespace:JoystickControl;assembly=JoystickControl"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
             xmlns:mvvmUtils="clr-namespace:Laserocitor.Utils.MVVM"
             xmlns:rotaryControl="clr-namespace:RotaryControl;assembly=RotaryControl" 
             xmlns:toggleSwitchControl="clr-namespace:ToggleSwitchControl;assembly=ToggleSwitchControl"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <mvvmUtils:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <!-- Image Parameters section primary container. -->
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                Height="Auto"
                Margin="0,0,0,0" 
                Orientation="Vertical" 
                VerticalAlignment="Top"
                x:Name="ImageParmsContainer">
        <GroupBox Background="Transparent" 
                  BorderBrush="Cyan"
                  Foreground="Cyan"
                  Header="{Binding SectionTitleText, Mode=TwoWay}"
                  Height="400"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,0"
                  Style="{DynamicResource GroupBoxStyle1}"
                  VerticalAlignment="Top"                  
                  Width="475"
                  x:Name="SectionGroupBox">

            <!-- Controls container. -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top">
                <!-- Translation and Rotation sub-sections container. -->
                <StackPanel Margin="0,5,0,0" 
                            Orientation="Vertical"
                            VerticalAlignment="Top">

                    <!-- Translation sub-section -->
                    <Border Background="{StaticResource SubSectionBackground}" 
                            BorderBrush="{StaticResource SubSectionBorder}" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Height="230" 
                            HorizontalAlignment="Center"  
                            Margin="0,0,0,0" 
                            Panel.ZIndex="-1"
                            ToolTip="{StaticResource IP_ToolTipText_TS}"
                            VerticalAlignment="Top"
                            Width="370">
                        <StackPanel Margin="0,-5,0,0" 
                                    Orientation="Vertical">
                            <Label Content="TRANSLATION" 
                                   FontFamily="Vrinda"
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0" 
                                   ToolTip="Controls for positioning the image" 
                                   VerticalAlignment="Top"/>
                            
                                <!-- Translation controls container. -->
                                <StackPanel Margin="0,-5,0,0" Orientation="Horizontal">
                                    <joystickControl:Joystick AngleStep="1" 
                                                              DistanceStep="1"
                                                              Height="100" 
                		                                            HorizontalAlignment="Center" 
                                                              ResetKnobAfterRelease="{Binding JSAutoCenter, Mode=TwoWay}"
                		                                            Margin="5" 
                                                              PresetX="{Binding PosPresetX, Mode=TwoWay}"
                                                              PresetY="{Binding PosPresetX, Mode=TwoWay}"
                                                              ToolTip="{StaticResource IP_ToolTipText_TJS}"
                		                                            VerticalAlignment="Center"
                		                                            Width="100"                                                 
                                                              x:Name="TranslationStick"
                                                              X="{Binding JSXPos, Mode=TwoWay}"
                                                              Y="{Binding JSYPos, Mode=TwoWay}" />

                                    <!-- Auto-Translation sub-sub-section -->
                                    <Border Background="{StaticResource SubSubSectionBackground}" 
                                            BorderBrush="{StaticResource SubSubSectionBorder}" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Height="190" 
                                            HorizontalAlignment="Center"  
                                            Margin="0,8,0,0" 
                                            Panel.ZIndex="-1"
                                            ToolTip="{StaticResource IP_ToolTipText_ATSS}"
                                            Width="250">
                                        <StackPanel Margin="0,0,0,0" 
                                                    Orientation="Vertical">
                                            <StackPanel Margin="0,0,0,0" 
                                                        Orientation="Horizontal">
                                                <toggleSwitchControl:ToggleSwitchControl Height="80" 
                                                                                         HorizontalAlignment="Left" 
                                                                                         SwitchOn="False"
                                                                                         ControlEnabled="True"
                                                                                         LEDOffColor="eLEDRed"
                                                                                         LEDOnColor="eLEDGreen"
                                                                                         LegendBrush="White"
                                                                                         LegendFontSize="12"
                                                                                         SwitchLegendText="AUTO"
                                                                                         SwitchSize="32"
                                                                                         TBClkd="AutoPosTSClkd"
                                                                                         ToolTip="{StaticResource IP_ToolTipText_AS}"
                                                                                         Width="80"
                                                                                         x:Name="AutoPosTS"/>
                                                <toggleSwitchControl:ToggleSwitchControl Height="80" 
                                                                                         HorizontalAlignment="Left" 
                                                                                         SwitchOn="True"
                                                                                         ControlEnabled="True"
                                                                                         LEDOffColor="eLEDRed"
                                                                                         LEDOnColor="eLEDGreen"
                                                                                         LegendBrush="White"
                                                                                         LegendFontSize="12"
                                                                                         OffLabelText="CCW"
                                                                                         OnLabelText="CW"
                                                                                         SwitchLegendText="DIRECTION"
                                                                                         SwitchSize="32"
                                                                                         TBClkd="AutoPosDirTSClkd"
                                                                                         ToolTip="{StaticResource IP_ToolTipText_DS}"
                                                                                         Width="80"
                                                                                         x:Name="AutoPosDirTS"/>
                                                <toggleSwitchControl:ToggleSwitchControl Height="80" 
                                                                                         HorizontalAlignment="Left" 
                                                                                         SwitchOn="False"
                                                                                         ControlEnabled="True"
                                                                                         LEDOffColor="eLEDRed"
                                                                                         LEDOnColor="eLEDGreen"
                                                                                         LegendBrush="White"
                                                                                         LegendFontSize="12"
                                                                                         OffLabelText="UNCOUPLED"
                                                                                         OnLabelText="COUPLED"
                                                                                         SwitchLegendText="ORBIT"
                                                                                         SwitchSize="32"
                                                                                         TBClkd="AutoPosOrbitTSClkd"
                                                                                         ToolTip="{StaticResource IP_ToolTipText_COS}"
                                                                                         Width="90"
                                                                                         x:Name="AutoPosOrbitTS"/>
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Center" 
                                                        Margin="0,0,0,0" 
                                                        Orientation="Horizontal">
                                                <rotaryControl:RotaryControl Background="Transparent"             
                                                                             ControlEnabled="True"
                                                                             EndAngleInDegrees="135"
                                                                             FontBrush="White"                                                       
                                                                             Height="200"
                                                                             HideFineTuneButtons="True"
                                                                             HorizontalAlignment="Center"                                                     
                                                                             LabelDialRadius="60"
                                                                             LegendBrush="White"
                                                                             LegendFontSize="18"
                                                                             LegendText="LEVEL"
                                                                             MajorTickBrush="White"
                                                                             MajorTickDialRadius="60"
                                                                             MajorTickIncrement="25"
                                                                             MinimumValue="0"
                                                                             MinorTickBrush="LightGray"
                                                                             MinorTickDialRadius="50"
                                                                             NumberOfMajorTicks="11"
                                                                             NumberOfMinorTicks="2"
                                                                             PointerAxleFillActive="#00FF00"
                                                                             PointerAxleFillInactive="#FF0000"  
                                                                             PointerType="arrow"
                                                                             Size="0.5"
                                                                             StartAngleInDegrees="225"
                                                                             ToolTip="{StaticResource IP_ToolTipText_LRC}"
                                                                             Value="{Binding IPAutoPosLevel, Mode=TwoWay}"
                                                                             VerticalAlignment="Top"
                                                                             Width="200"                                                                 
                                                                             x:Name="AutoPosLevelRC">

                                                    <rotaryControl:RotaryControl.PointerFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="#000000" Offset="0"/>
                                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.PointerFill>

                                                    <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                                                    <rotaryControl:RotaryControl.InnerDialFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                                            <GradientStop Color="Blue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.InnerDialFill>

                                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                    <rotaryControl:RotaryControl.OuterDialFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="Black" Offset="0"/>
                                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.OuterDialFill>
                                                    <rotaryControl:RotaryControl.LayoutTransform>
                                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=AutoPosLevelRC}" 
                                                                         ScaleY="{Binding Size, ElementName=AutoPosLevelRC}"/>
                                                    </rotaryControl:RotaryControl.LayoutTransform>
                                                </rotaryControl:RotaryControl>
                                                <rotaryControl:RotaryControl Background="Transparent"             
                                                                             ControlEnabled="True"
                                                                             EndAngleInDegrees="135"
                                                                             FontBrush="White"                                                                                                                             
                                                                             Height="204"
                                                                             HorizontalAlignment="Center"                                                     
                                                                             LabelDialRadius="60"
                                                                             LegendBrush="White"
                                                                             LegendFontSize="18"
                                                                             LegendText="RATE"
                                                                             MajorTickBrush="White"
                                                                             MajorTickDialRadius="60"
                                                                             MajorTickIncrement="1000"
                                                                             MinimumValue="0"
                                                                             MinorTickBrush="LightGray"
                                                                             MinorTickDialRadius="50"
                                                                             NumberOfMajorTicks="11"
                                                                             NumberOfMinorTicks="2"
                                                                             PointerAxleFillActive="#00FF00"
                                                                             PointerAxleFillInactive="#FF0000"  
                                                                             PointerType="arrow"
                                                                             Size="0.5"
                                                                             StartAngleInDegrees="225"
                                                                             ToolTip="{StaticResource IP_ToolTipText_RRC}"
                                                                             Value="{Binding IPAutoPosRate, Mode=TwoWay}"
                                                                             VerticalAlignment="Top"
                                                                             Width="200"                                                                 
                                                                             x:Name="AutoPosRateRC">

                                                    <rotaryControl:RotaryControl.PointerFill>
                                                        <LinearGradientBrush EndPoint="0.5, 0" StartPoint="0.5, 1">
                                                            <GradientStop Color="#000000" Offset="0"/>
                                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.PointerFill>

                                                    <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                                                    <rotaryControl:RotaryControl.InnerDialFill>
                                                        <LinearGradientBrush EndPoint="0.5, 0" StartPoint="0.5, 1">
                                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                                            <GradientStop Color="Blue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.InnerDialFill>

                                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                    <rotaryControl:RotaryControl.OuterDialFill>
                                                        <LinearGradientBrush EndPoint="0.5, 0" StartPoint="0.5, 1">
                                                            <GradientStop Color="Black" Offset="0"/>
                                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.OuterDialFill>
                                                    <rotaryControl:RotaryControl.LayoutTransform>
                                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=AutoPosRateRC}" 
                                                                         ScaleY="{Binding Size, ElementName=AutoPosRateRC}"/>
                                                    </rotaryControl:RotaryControl.LayoutTransform>
                                                </rotaryControl:RotaryControl>                                    
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Rotation sub-section -->
                    <Border Background="{StaticResource SubSectionBackground}" 
                            BorderBrush="{StaticResource SubSectionBorder}" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Height="130" 
                            HorizontalAlignment="Center"  
                            Margin="2,2,0,0" 
                            Panel.ZIndex="-1"
                            ToolTip="{StaticResource IP_ToolTipText_RS}"
                            Width="370">
                        <StackPanel HorizontalAlignment="Center" 
                                    Margin="0,0,0,0" 
                                    Orientation="Vertical">
                            <Label Content="ROTATION" 
                                   FontFamily="Vrinda"
                                   Foreground="White"
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,0" 
                                   ToolTip="X/Y/Z Axis Rotation Controls" />
                            <StackPanel HorizontalAlignment="Center"
                                        Margin="0,0,0,0" 
                                        Orientation="Horizontal">
                                <rotaryControl:RotaryControl Background="Transparent"             
                                                             ControlEnabled="True"
                                                             EndAngleInDegrees="360"
                                                             FontBrush="White"                                                       
                                                             Height="200"
                                                             HideFineTuneButtons="True"
                                                             HorizontalAlignment="Center"                                                     
                                                             LabelDialRadius="60"
                                                             LabelMaxDigits="3"
                                                             LegendBrush="White"
                                                             LegendFontSize="18"
                                                             LegendText="X-AXIS"
                                                             MajorTickBrush="White"
                                                             MajorTickDialRadius="60"
                                                             MajorTickIncrement="90"                                                                        
                                                             MinimumValue="0"
                                                             MinorTickBrush="LightGray"
                                                             MinorTickDialRadius="50"
                                                             NumberOfMajorTicks="5"
                                                             NumberOfMinorTicks="2"
                                                             PointerAxleFillActive="#00FF00"
                                                             PointerAxleFillInactive="#FF0000"  
                                                             PointerType="arrow"
                                                             Size="0.5"
                                                             StartAngleInDegrees="0"
                                                             ToolTip="{StaticResource IP_ToolTipText_XRRC}"
                                                             Value="{Binding XRotation, Mode=TwoWay}"
                                                             VerticalAlignment="Top"
                                                             Width="180"                                                                 
                                                             x:Name="XRotationRC">

                                <rotaryControl:RotaryControl.PointerFill>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="#000000" Offset="0"/>
                                        <GradientStop Color="#0000FF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.PointerFill>

                                <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                                <rotaryControl:RotaryControl.InnerDialFill>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="DodgerBlue" Offset="0"/>
                                        <GradientStop Color="Blue" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.InnerDialFill>

                                <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                                <rotaryControl:RotaryControl.OuterDialFill>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="DarkBlue" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.OuterDialFill>
                                <rotaryControl:RotaryControl.LayoutTransform>
                                    <ScaleTransform  ScaleX="{Binding Size, ElementName=XRotationRC}" 
                                                     ScaleY="{Binding Size, ElementName=XRotationRC}"/>
                                </rotaryControl:RotaryControl.LayoutTransform>
                            </rotaryControl:RotaryControl>
                                <rotaryControl:RotaryControl Background="Transparent"             
                                                             ControlEnabled="True"
                                                             EndAngleInDegrees="360"
                                                             FontBrush="White"                                                       
                                                             Height="200"
                                                             HideFineTuneButtons="True"
                                                             HorizontalAlignment="Center"                                                     
                                                             LabelDialRadius="60"
                                                             LabelMaxDigits="3"
                                                             LegendBrush="White"
                                                             LegendFontSize="18"
                                                             LegendText="Y-AXIS"
                                                             MajorTickBrush="White"
                                                             MajorTickDialRadius="60"
                                                             MajorTickIncrement="90"
                                                             MinimumValue="0"
                                                             MinorTickBrush="LightGray"
                                                             MinorTickDialRadius="50"
                                                             NumberOfMajorTicks="5"
                                                             NumberOfMinorTicks="2"
                                                             PointerAxleFillActive="#00FF00"
                                                             PointerAxleFillInactive="#FF0000"  
                                                             PointerType="arrow"
                                                             Size="0.5"
                                                             StartAngleInDegrees="0"
                                                             ToolTip="{StaticResource IP_ToolTipText_YRRC}"
                                                             Value="{Binding YRotation, Mode=TwoWay}"
                                                             VerticalAlignment="Top"
                                                             Width="180"                                                                 
                                                             x:Name="YRotationRC">

                                    <rotaryControl:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#000000" Offset="0"/>
                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.PointerFill>

                                    <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                                    <rotaryControl:RotaryControl.InnerDialFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                            <GradientStop Color="Blue" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.InnerDialFill>

                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                                    <rotaryControl:RotaryControl.OuterDialFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.OuterDialFill>
                                    <rotaryControl:RotaryControl.LayoutTransform>
                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=YRotationRC}" 
                                                         ScaleY="{Binding Size, ElementName=YRotationRC}"/>
                                    </rotaryControl:RotaryControl.LayoutTransform>
                                </rotaryControl:RotaryControl>
                                <rotaryControl:RotaryControl Background="Transparent"             
                                                             ControlEnabled="True"
                                                             EndAngleInDegrees="360"
                                                             FontBrush="White"                                                       
                                                             Height="200"
                                                             HideFineTuneButtons="True"
                                                             HorizontalAlignment="Center"                                                     
                                                             LabelDialRadius="60"
                                                             LabelMaxDigits="3"
                                                             LegendBrush="White"
                                                             LegendFontSize="18"
                                                             LegendText="Z-AXIS"
                                                             MajorTickBrush="White"
                                                             MajorTickDialRadius="60"
                                                             MajorTickIncrement="90"
                                                             MinimumValue="0"
                                                             MinorTickBrush="LightGray"
                                                             MinorTickDialRadius="50"
                                                             NumberOfMajorTicks="5"
                                                             NumberOfMinorTicks="2"
                                                             PointerAxleFillActive="#00FF00"
                                                             PointerAxleFillInactive="#FF0000"  
                                                             PointerType="arrow"
                                                             Size="0.5"
                                                             StartAngleInDegrees="0"
                                                             ToolTip="{StaticResource IP_ToolTipText_ZRRC}"
                                                             Value="{Binding ZRotation, Mode=TwoWay}"
                                                             VerticalAlignment="Top"
                                                             Width="180"                                                                 
                                                             x:Name="ZRotationRC">

                                    <rotaryControl:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#000000" Offset="0"/>
                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.PointerFill>

                                    <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                                    <rotaryControl:RotaryControl.InnerDialFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                            <GradientStop Color="Blue" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.InnerDialFill>

                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                                    <rotaryControl:RotaryControl.OuterDialFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.OuterDialFill>
                                    <rotaryControl:RotaryControl.LayoutTransform>
                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=ZRotationRC}" 
                                                         ScaleY="{Binding Size, ElementName=ZRotationRC}"/>
                                    </rotaryControl:RotaryControl.LayoutTransform>
                                </rotaryControl:RotaryControl>
                                <rotaryControl:RotaryControl Background="Transparent"             
                                                             ControlEnabled="True"
                                                             EndAngleInDegrees="360"
                                                             FontBrush="White"                                                       
                                                             Height="200"
                                                             HideFineTuneButtons="True"
                                                             HorizontalAlignment="Center"                                                     
                                                             LabelDialRadius="60"
                                                             LabelMaxDigits="3"
                                                             LegendBrush="White"
                                                             LegendFontSize="18"
                                                             LegendText="ORBIT"
                                                             MajorTickBrush="White"
                                                             MajorTickDialRadius="60"
                                                             MajorTickIncrement="90"
                                                             MinimumValue="0"
                                                             MinorTickBrush="LightGray"
                                                             MinorTickDialRadius="50"
                                                             NumberOfMajorTicks="5"
                                                             NumberOfMinorTicks="2"
                                                             PointerAxleFillActive="#00FF00"
                                                             PointerAxleFillInactive="#FF0000"  
                                                             PointerType="arrow"
                                                             Size="0.5"
                                                             StartAngleInDegrees="0"
                                                             ToolTip="{StaticResource IP_ToolTipText_ORRC}"
                                                             Value="{Binding IPOrbit, Mode=TwoWay}"
                                                             VerticalAlignment="Top"
                                                             Width="180"                                                                 
                                                             x:Name="OrbitRC">

                                    <rotaryControl:RotaryControl.PointerFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#000000" Offset="0"/>
                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.PointerFill>

                                    <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                                    <rotaryControl:RotaryControl.InnerDialFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                            <GradientStop Color="Blue" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.InnerDialFill>

                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                                    <rotaryControl:RotaryControl.OuterDialFill>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </rotaryControl:RotaryControl.OuterDialFill>
                                    <rotaryControl:RotaryControl.LayoutTransform>
                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=OrbitRC}" 
                                                         ScaleY="{Binding Size, ElementName=OrbitRC}"/>
                                    </rotaryControl:RotaryControl.LayoutTransform>
                                </rotaryControl:RotaryControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

            <!-- Image controls (Aspect/Size/Zoom) controls container. -->
            <StackPanel HorizontalAlignment="Center" 
                        Orientation="Vertical">
                    <rotaryControl:RotaryControl Background="Transparent"             
                                                 ControlEnabled="True"
                                                 EndAngleInDegrees="135"
                                                 FontBrush="White"                                                       
                                                 Height="200"
                                                 HideFineTuneButtons="True"
                                                 HorizontalAlignment="Center"                                                     
                                                 LabelDialRadius="60"
                                                 LegendBrush="White"
                                                 LegendFontSize="18"
                                                 LegendText="ASPECT RATIO"
                                                 MajorTickBrush="White"
                                                 MajorTickDialRadius="60"
                                                 MajorTickIncrement="25"
                                                 MinimumValue="-50"
                                                 MinorTickBrush="LightGray"
                                                 MinorTickDialRadius="50"
                                                 NumberOfMajorTicks="5"
                                                 NumberOfMinorTicks="2"
                                                 PointerAxleFillActive="#00FF00"
                                                 PointerAxleFillInactive="#FF0000"  
                                                 PointerType="arrow"
                                                 Size="0.5"
                                                 StartAngleInDegrees="225"
                                                 ToolTip="{StaticResource IP_ToolTipText_ARRC}"
                                                 Value="{Binding IPAspectRatio, Mode=TwoWay}"
                                                 VerticalAlignment="Top"
                                                 Width="180"                                                                 
                                                 x:Name="AspectRatioRC">

                        <rotaryControl:RotaryControl.PointerFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#000000" Offset="0"/>
                                <GradientStop Color="#0000FF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </rotaryControl:RotaryControl.PointerFill>

                        <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                        <rotaryControl:RotaryControl.InnerDialFill>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
