<!-- These string resources are used to populate ToolTip Text Properties in the 
     Screen Parameters Section UserControl.                                     -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <system:String x:Key="SP_ToolTipText_BSC">
        This control changes the screen background color blue component.
    </system:String>
    <system:String x:Key="SP_ToolTipText_GSC">
        This control changes the screen background color green component.
    </system:String>    
    <system:String x:Key="SP_ToolTipText_RSC">
        This control changes the screen background color red component.
    </system:String>
    <system:String x:Key="SP_ToolTipText_RGBRC">
        This control changes the screen background color.
    </system:String>
    <system:String x:Key="SP_ToolTipText_SP">
        This controls in this sction change the screen background color.
    </system:String>
</ResourceDictionary>