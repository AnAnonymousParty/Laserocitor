<UserControl d:DesignHeight="200" 
             d:DesignWidth="100"
             mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             
             x:Class="Laserocitor.UserControls.ScreenParms.ScreenParms"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:rotaryControl="clr-namespace:RotaryControl;assembly=RotaryControl"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Main container -->
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                Height="Auto" 
                HorizontalAlignment="Center"
                Margin="0,0,0,0" 
                Orientation="Vertical"
                Width="Auto">
        <GroupBox Background="Transparent" 
                  BorderBrush="Cyan"
                  Foreground="Cyan"
                  Header="SCREEN"
                  Height="Auto"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,0"
                  Style="{StaticResource GroupBoxStyle1}"
                  ToolTip="{StaticResource SP_ToolTipText_SP}"
                  VerticalAlignment="Top"                  
                  Width="AUTO"
                  x:Name="SectionGroupBox">

            <!-- Controls container. -->
            <StackPanel Height="Auto" 
                        HorizontalAlignment="Center"
                        Margin="0,5,0,0" 
                        Orientation="Vertical"
                        Width="Auto">

                <!-- RGB Sliders container. --> 
                <StackPanel Height="Auto" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0" 
                            Orientation="Horizontal"
                            Width="Auto">
                    <StackPanel Height="Auto" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,0" 
                                Orientation="Vertical"
                                Width="Auto">
                        <Label Content="R" 
                               Foreground="Red"
                               Height="28" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,0" 
                               VerticalAlignment="Top"  
                               Width="17" />
                        <Slider Height="35"
                                HorizontalAlignment="Left" 
                                Margin="0,0,0,0" 
                                RenderTransformOrigin="0.333,0.585" 
                                Orientation="Vertical" 
                                Maximum="255" 
                                Delay="50"      
                                ToolTip="{StaticResource SP_ToolTipText_RSC}"
                                Value="{Binding SPBgColorR, Mode=TwoWay}"
                                VerticalAlignment="Top" 
                                Width="18" />
                    </StackPanel>
                    <StackPanel Height="Auto" 
                                HorizontalAlignment="Center"
                                Margin="2,0,2,0" 
                                Orientation="Vertical"
                                Width="Auto">
                        <Label Content="G" 
                               Foreground="Green"
                               Height="28" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,0" 
                               VerticalAlignment="Top"  
                               Width="17" />
                        <Slider Height="35"
                                HorizontalAlignment="Left" 
                                Margin="0,0,0,0" 
                                RenderTransformOrigin="0.333,0.585" 
                                Orientation="Vertical" 
                                Maximum="255" 
                                Delay="50"          
                                ToolTip="{StaticResource SP_ToolTipText_GSC}"
                                Value="{Binding SPBgColorG, Mode=TwoWay}"
                                VerticalAlignment="Top" 
                                Width="18" />
                    </StackPanel>
                    <StackPanel Height="Auto" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,0" 
                                Orientation="Vertical"
                                Width="Auto">
                        <Label Content="B" 
                               Foreground="Blue"
                               Height="28" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,0" 
                               VerticalAlignment="Top"  
                               Width="17" />
                        <Slider Height="35"
                                HorizontalAlignment="Left" 
                                Margin="0,0,0,0" 
                                RenderTransformOrigin="0.333,0.585" 
                                Orientation="Vertical" 
                                Maximum="255" 
                                Delay="50"                   
                                ToolTip="{StaticResource SP_ToolTipText_BSC}"
                                Value="{Binding SPBgColorB, Mode=TwoWay}"
                                VerticalAlignment="Top" 
                                Width="18" />
                    </StackPanel>
                </StackPanel>
                <rotaryControl:RotaryControl Background="Transparent"             
                                             ControlEnabled="False"
                                             EndAngleInDegrees="360"
                                             FontBrush="White"                                                       
                                             Height="200"
                                             HorizontalAlignment="Center"                                                     
                                             LabelDialRadius="60"
                                             LegendBrush="White"
                                             LegendFontSize="18"
                                             LegendText="COLOR"
                                             HideFineTuneButtons="True"
                                             MajorTickBrush="White"
                                             MajorTickDialRadius="60"
                                             MajorTickIncrement="511"
                                             Margin="0,10,0,10"
                                             MinimumValue="0"
                                             MinorTickBrush="LightGray"
                                             MinorTickDialRadius="50"
                                             NumberOfMajorTicks="4"
                                             NumberOfMinorTicks="1"
                                             PointerAxleFillActive="#00FF00"
                                             PointerAxleFillInactive="#FF0000"  
                                             PointerType="circle"
                                             ShowLabels="False"
                                             Size="0.4"
                                             StartAngleInDegrees="0"
                                             ToolTip="{StaticResource SP_ToolTipText_RGBRC}"
                                             Value="{Binding SPBgColorRGB, Mode=TwoWay}"
                                             Width="170"                                                                 
                                             x:Name="SPBgColorRGBRC">

                    <rotaryControl:RotaryControl.PointerFill>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="#000000" Offset="0"/>
                            <GradientStop Color="#0000FF" Offset="1.0"/>
                        </LinearGradientBrush>
                    </rotaryControl:RotaryControl.PointerFill>

                    <rotaryControl:RotaryControl.InnerDialRadius>40</rotaryControl:RotaryControl.InnerDialRadius>
                    <rotaryControl:RotaryControl.InnerDialFill>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="DodgerBlue" Offset="0"/>
                            <GradientStop Color="Blue" Offset="1.0"/>
                        </LinearGradientBrush>
                    </rotaryControl:RotaryControl.InnerDialFill>

                    <rotaryControl:RotaryControl.OuterDialBorderThickness>2</rotaryControl:RotaryControl.OuterDialBorderThickness>
                    <rotaryControl:RotaryControl.OuterDialFill>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                        </LinearGradientBrush>
                    </rotaryControl:RotaryControl.OuterDialFill>
                    <rotaryControl:RotaryControl.LayoutTransform>
                        <ScaleTransform  ScaleX="{Binding Size, ElementName=SPBgColorRGBRC}" 
                                         ScaleY="{Binding Size, ElementName=SPBgColorRGBRC}"/>
                    </rotaryControl:RotaryControl.LayoutTransform>
                </rotaryControl:RotaryControl>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
