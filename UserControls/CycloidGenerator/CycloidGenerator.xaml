<UserControl d:DesignHeight="360"
             d:DesignWidth="300"           
             mc:Ignorable="d"
             x:Class="Laserocitor.UserControls.CycloidGenerator.CycloidGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             
             xmlns:rotaryControl="clr-namespace:RotaryControl;assembly=RotaryControl"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:toggleSwitchControl="clr-namespace:ToggleSwitchControl;assembly=ToggleSwitchControl"
             xmlns:waveformSelector="clr-namespace:Laserocitor.UserControls.WaveformSelector"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 <!-- Primary container. -->
 <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}"
		           Height="Auto"
		           HorizontalAlignment="Center" 
		           Margin="0,0,0,0"
		           Orientation="Vertical"
             ToolTip="{StaticResource CG_ToolTipText_CGS}"
		           VerticalAlignment="Center"
		           Width="Auto">
  <GroupBox Background="Transparent" 
			         BorderBrush="Cyan"
			         Foreground="Cyan"
			         Header="{Binding SectionTitleText, Mode=TwoWay}"
			         Height="360"
			         Margin="0,0,0,0"
			         Style="{DynamicResource GroupBoxStyle1}"
			         VerticalAlignment="Center"                  
			         Width="300"
			         x:Name="SectionGroupBox">

   <!-- Controls container. -->
   <StackPanel HorizontalAlignment="Center" 
               Margin="0,0,0,0"
               Orientation="Vertical">

    <!-- Basic cycloid parms controls container. -->
    <StackPanel HorizontalAlignment="Center"
                Margin="0,0,0,0" 
                Orientation="Horizontal">
     <rotaryControl:RotaryControl Background="Transparent"             
								                          ControlEnabled="True"
								                          EndAngleInDegrees="135"
								                          FontBrush="White"                                                       
								                          Height="205"
								                          HorizontalAlignment="Center"                                                     
								                          LabelDialRadius="60"
								                          LegendBrush="White"
								                          LegendFontSize="18"
								                          LegendText="SCAN RATE"
								                          MajorTickBrush="White"
								                          MajorTickDialRadius="60"
								                          MajorTickIncrement="100"
								                          MinimumValue="0"
								                          MinorTickBrush="LightGray"
								                          MinorTickDialRadius="50"
								                          NumberOfMajorTicks="11"
								                          NumberOfMinorTicks="2"
								                          PointerAxleFillActive="#00FF00"
								                          PointerAxleFillInactive="#FF0000"  
								                          PointerType="arrow"
								                          Size="0.5"
								                          StartAngleInDegrees="225"
								                          ToolTip="{StaticResource CG_ToolTipText_SRRC}"
								                          Value="{Binding ScanRate, Mode=TwoWay}"
								                          VerticalAlignment="Top"
								                          Width="180"                                                                 
								                          x:Name="ScanRateRC">

      <rotaryControl:RotaryControl.PointerFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="#000000" Offset="0"/>
        <GradientStop Color="#0000FF" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.PointerFill>

      <rotaryControl:RotaryControl.InnerDialRadius>
       <system:Double>40</system:Double>
      </rotaryControl:RotaryControl.InnerDialRadius>
      <rotaryControl:RotaryControl.InnerDialFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="DodgerBlue" Offset="0"/>
        <GradientStop Color="Blue" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.InnerDialFill>

      <rotaryControl:RotaryControl.OuterDialBorderThickness>
       <system:Double>2</system:Double>
      </rotaryControl:RotaryControl.OuterDialBorderThickness>
      <rotaryControl:RotaryControl.OuterDialFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="DarkBlue" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.OuterDialFill>
      <rotaryControl:RotaryControl.LayoutTransform>
       <ScaleTransform  ScaleX="{Binding Size, ElementName=ScanRateRC}" 
										              ScaleY="{Binding Size, ElementName=ScanRateRC}"/>
      </rotaryControl:RotaryControl.LayoutTransform>
     </rotaryControl:RotaryControl>
     <rotaryControl:RotaryControl Background="Transparent"             
								                          ControlEnabled="True"
								                          EndAngleInDegrees="135"
								                          FontBrush="White"                                                       
								                          Height="205"
								                          HorizontalAlignment="Center"                                                     
								                          LabelDialRadius="60"
								                          LegendBrush="White"
								                          LegendFontSize="18"
								                          LegendText="FC RADIUS"
								                          MajorTickBrush="White"
								                          MajorTickDialRadius="60"
								                          MajorTickIncrement="100"
								                          MinimumValue="0"
								                          MinorTickBrush="LightGray"
								                          MinorTickDialRadius="50"
								                          NumberOfMajorTicks="11"
								                          NumberOfMinorTicks="2"
								                          PointerAxleFillActive="#00FF00"
								                          PointerAxleFillInactive="#FF0000"  
								                          PointerType="arrow"
								                          Size="0.5"
								                          StartAngleInDegrees="225"
								                          ToolTip="{StaticResource CG_ToolTipText_FCRRC}"
								                          Value="{Binding FixedCircleRadius, Mode=TwoWay}"
								                          VerticalAlignment="Top"
								                          Width="180"                                                                 
								                          x:Name="FixedCircleRadiusRC">

      <rotaryControl:RotaryControl.PointerFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="#000000" Offset="0"/>
        <GradientStop Color="#0000FF" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.PointerFill>

      <rotaryControl:RotaryControl.InnerDialRadius>
       <system:Double>40</system:Double>
      </rotaryControl:RotaryControl.InnerDialRadius>
      <rotaryControl:RotaryControl.InnerDialFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="DodgerBlue" Offset="0"/>
        <GradientStop Color="Blue" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.InnerDialFill>

      <rotaryControl:RotaryControl.OuterDialBorderThickness>
       <system:Double>2</system:Double>
      </rotaryControl:RotaryControl.OuterDialBorderThickness>
      <rotaryControl:RotaryControl.OuterDialFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="DarkBlue" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.OuterDialFill>
      <rotaryControl:RotaryControl.LayoutTransform>
       <ScaleTransform  ScaleX="{Binding Size, ElementName=FixedCircleRadiusRC}" 
										              ScaleY="{Binding Size, ElementName=FixedCircleRadiusRC}"/>
      </rotaryControl:RotaryControl.LayoutTransform>
     </rotaryControl:RotaryControl>
     <rotaryControl:RotaryControl Background="Transparent"             
								                          ControlEnabled="True"
								                          EndAngleInDegrees="135"
								                          FontBrush="White"                                                       
								                          Height="205"
								                          HorizontalAlignment="Center"                                                     
								                          LabelDialRadius="60"
								                          LegendBrush="White"
								                          LegendFontSize="18"
								                          LegendText="RC RADIUS"
								                          MajorTickBrush="White"
								                          MajorTickDialRadius="60"
								                          MajorTickIncrement="100"
								                          MinimumValue="0"
								                          MinorTickBrush="LightGray"
								                          MinorTickDialRadius="50"
								                          NumberOfMajorTicks="11"
								                          NumberOfMinorTicks="2"
								                          PointerAxleFillActive="#00FF00"
								                          PointerAxleFillInactive="#FF0000"  
								                          PointerType="arrow"
								                          Size="0.5"
								                          StartAngleInDegrees="225"
								                          ToolTip="{StaticResource CG_ToolTipText_RCRRC}"
								                          Value="{Binding RollingCircleRadius, Mode=TwoWay}"
								                          VerticalAlignment="Top"
								                          Width="180"                                                                 
								                          x:Name="RollingCircleRadiusRC">

      <rotaryControl:RotaryControl.PointerFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="#000000" Offset="0"/>
        <GradientStop Color="#0000FF" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.PointerFill>

      <rotaryControl:RotaryControl.InnerDialRadius>
       <system:Double>40</system:Double>
      </rotaryControl:RotaryControl.InnerDialRadius>
      <rotaryControl:RotaryControl.InnerDialFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="DodgerBlue" Offset="0"/>
        <GradientStop Color="Blue" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.InnerDialFill>

      <rotaryControl:RotaryControl.OuterDialBorderThickness>
       <system:Double>2</system:Double>
      </rotaryControl:RotaryControl.OuterDialBorderThickness>
      <rotaryControl:RotaryControl.OuterDialFill>
       <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="DarkBlue" Offset="1.0"/>
       </LinearGradientBrush>
      </rotaryControl:RotaryControl.OuterDialFill>
      <rotaryControl:RotaryControl.LayoutTransform>
       <ScaleTransform  ScaleX="{Binding Size, ElementName=FixedCircleRadiusRC}" 
										              ScaleY="{Binding Size, ElementName=FixedCircleRadiusRC}"/>
      </rotaryControl:RotaryControl.LayoutTransform>
     </rotaryControl:RotaryControl>
    </StackPanel>

    <!-- Sweep length sub-section. -->
    <Border Background="{StaticResource SubSectionBackground}" 
						      BorderBrush="{StaticResource SubSectionBorder}" 
						      BorderThickness="1" 
						      CornerRadius="10" 
						      Height="Auto" 
						      HorizontalAlignment="Center"  
						      Margin="0,10,0,0" 
						      ToolTip="{StaticResource CG_ToolTipText_OMS}"
						      VerticalAlignment="Top"
						      Width="Auto">
                    <StackPanel Margin="0,0,0,0" 
							                         Orientation="Vertical">
                        <Label Content="SWEEP LENGTH" 
								                       FontFamily="Vrinda"
								                       Foreground="White"
								                       HorizontalAlignment="Center" 
								                       Margin="0,0,0,0" 
								                       VerticalAlignment="Top" />
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <rotaryControl:RotaryControl Background="Transparent"             
								                            ControlEnabled="True"
								                            EndAngleInDegrees="135"
								                            FontBrush="White"                                                       
								                            Height="205"
								                            HorizontalAlignment="Center"                                                     
								                            LabelDialRadius="60"
								                            LegendBrush="White"
								                            LegendFontSize="18"
								                            LegendText="MANUAL"
								                            MajorTickBrush="White"
								                            MajorTickDialRadius="60"
								                            MajorTickIncrement="100"
                                    Margin="0,40,0,0"
								                            MinimumValue="0"
								                            MinorTickBrush="LightGray"
								                            MinorTickDialRadius="50"
								                            NumberOfMajorTicks="11"
								                            NumberOfMinorTicks="2"
								                            PointerAxleFillActive="#00FF00"
								                            PointerAxleFillInactive="#FF0000"  
								                            PointerType="arrow"
								                            Size="0.5"
								                            StartAngleInDegrees="225"
								                            ToolTip="{StaticResource CG_ToolTipText_SLRC}"
								                            Value="{Binding SweepLength, Mode=TwoWay}"
								                            VerticalAlignment="Top"
								                            Width="180"                                                                 
								                            x:Name="SweepLengthRC">

                                <rotaryControl:RotaryControl.PointerFill>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="#000000" Offset="0"/>
                                        <GradientStop Color="#0000FF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.PointerFill>

                                <rotaryControl:RotaryControl.InnerDialRadius>
                                    <system:Double>40</system:Double>
                                </rotaryControl:RotaryControl.InnerDialRadius>
                                <rotaryControl:RotaryControl.InnerDialFill>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="DodgerBlue" Offset="0"/>
                                        <GradientStop Color="Blue" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.InnerDialFill>

                                <rotaryControl:RotaryControl.OuterDialBorderThickness>
                                    <system:Double>2</system:Double>
                                </rotaryControl:RotaryControl.OuterDialBorderThickness>
                                <rotaryControl:RotaryControl.OuterDialFill>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="DarkBlue" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.OuterDialFill>
                                <rotaryControl:RotaryControl.LayoutTransform>
                                    <ScaleTransform  ScaleX="{Binding Size, ElementName=SweepLengthRC}" 
										                ScaleY="{Binding Size, ElementName=SweepLengthRC}"/>
                                </rotaryControl:RotaryControl.LayoutTransform>
                            </rotaryControl:RotaryControl>

                            <!-- ASL sub-sub-section container. -->
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">

                                    <!-- Auto sweep length sub-sub-section. -->
                                    <Border Background="{StaticResource SubSubSectionBackground}" 
						                                      BorderBrush="{StaticResource SubSubSectionBorder}" 
						                                      BorderThickness="1" 
						                                      CornerRadius="10" 
						                                      Height="Auto" 
						                                      HorizontalAlignment="Center"  
						                                      Margin="0,0,5,5" 
						                                      ToolTip="{StaticResource CG_ToolTipText_AOMS}"
						                                      VerticalAlignment="Center"
						                                      Width="Auto">

                                        <!-- ASL Controls container -->
                                        <StackPanel Orientation="Vertical"
                      VerticalAlignment="Center">

                                            <!-- ASL enable and wave selection controls container. -->
                                            <StackPanel HorizontalAlignment="Center" 
                       Margin="0,0,0,0" 
							                Orientation="Horizontal">

                                                <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                            HorizontalAlignment="Left" 
									                                            SwitchOn="True"
									                                            ControlEnabled="True"
									                                            LEDOffColor="eLEDRed"
									                                            LEDOnColor="eLEDGreen"
									                                            LegendBrush="White"
									                                            LegendFontSize="10"
									                                            SwitchLegendText="AUTO"
									                                            SwitchSize="32"
									                                            TBClkd="AutoSLTSClkd"
									                                            ToolTip="{StaticResource CG_ToolTipText_ASLETS}"
									                                            Width="60"
									                                            x:Name="AutoSWTS"/>
                                                <waveformSelector:WaveformSelector Margin="10,0,0,0" 
								                                       Waveform="{Binding ASLModWaveform, Mode=TwoWay}"
								                                       x:Name="WS_AutoSLYMod"/>
                                            </StackPanel>

                                            <!-- ASL Rate & Level controls container. -->
                                            <StackPanel Margin="0,0,0,5" 
							                                                 Orientation="Horizontal">
                                                <rotaryControl:RotaryControl Background="Transparent"             
								                                 ControlEnabled="True"
								                                 EndAngleInDegrees="135"
								                                 FontBrush="White"                                                       
								                                 Height="205"
								                                 HorizontalAlignment="Center"                                                     
								                                 LabelDialRadius="60"
								                                 LegendBrush="White"
								                                 LegendFontSize="18"
								                                 LegendText="RATE"
								                                 MajorTickBrush="White"
								                                 MajorTickDialRadius="60"
								                                 MajorTickIncrement="100"
								                                 MinimumValue="0"
								                                 MinorTickBrush="LightGray"
								                                 MinorTickDialRadius="50"
								                                 NumberOfMajorTicks="11"
								                                 NumberOfMinorTicks="2"
								                                 PointerAxleFillActive="#00FF00"
								                                 PointerAxleFillInactive="#FF0000"  
								                                 PointerType="arrow"
								                                 Size="0.5"
								                                 StartAngleInDegrees="225"
								                                 ToolTip="{StaticResource CG_ToolTipText_ASLRRC}"
								                                 Value="{Binding ASLRate, Mode=TwoWay}"
								                                 VerticalAlignment="Top"
								                                 Width="180"                                                                 
								                                 x:Name="ASLRateRC">

                                                    <rotaryControl:RotaryControl.PointerFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="#000000" Offset="0"/>
                                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.PointerFill>

                                                    <rotaryControl:RotaryControl.InnerDialRadius>
                                                        <system:Double>40</system:Double>
                                                    </rotaryControl:RotaryControl.InnerDialRadius>
                                                    <rotaryControl:RotaryControl.InnerDialFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                                            <GradientStop Color="Blue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.InnerDialFill>

                                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                        <system:Double>2</system:Double>
                                                    </rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                    <rotaryControl:RotaryControl.OuterDialFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="Black" Offset="0"/>
                                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.OuterDialFill>
                                                    <rotaryControl:RotaryControl.LayoutTransform>
                                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=ASLRateRC}" 
										                     ScaleY="{Binding Size, ElementName=ASLRateRC}"/>
                                                    </rotaryControl:RotaryControl.LayoutTransform>
                                                </rotaryControl:RotaryControl>
                                                <rotaryControl:RotaryControl Background="Transparent"             
								                                 ControlEnabled="True"
								                                 EndAngleInDegrees="135"
								                                 FontBrush="White"                                                       
								                                 Height="205"
								                                 HorizontalAlignment="Center"                                                     
								                                 LabelDialRadius="60"
                                         LabelMaxDigits="3"                                    
								                                 LegendBrush="White"
								                                 LegendFontSize="18"
								                                 LegendText="LEVEL"
								                                 MajorTickBrush="White"
								                                 MajorTickDialRadius="60"
								                                 MajorTickIncrement="100"
								                                 MinimumValue="0"
								                                 MinorTickBrush="LightGray"
								                                 MinorTickDialRadius="50"
								                                 NumberOfMajorTicks="11"
								                                 NumberOfMinorTicks="2"
								                                 PointerAxleFillActive="#00FF00"
								                                 PointerAxleFillInactive="#FF0000"  
								                                 PointerType="arrow"
								                                 Size="0.5"
								                                 StartAngleInDegrees="225"
								                                 ToolTip="{StaticResource CG_ToolTipText_ASLLRC}"
								                                 Value="{Binding ASLLevel, Mode=TwoWay}"
								                                 VerticalAlignment="Top"
								                                 Width="180"                                                                 
								                                 x:Name="ASLLevelRC">

                                                    <rotaryControl:RotaryControl.PointerFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="#000000" Offset="0"/>
                                                            <GradientStop Color="#0000FF" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.PointerFill>

                                                    <rotaryControl:RotaryControl.InnerDialRadius>
                                                        <system:Double>40</system:Double>
                                                    </rotaryControl:RotaryControl.InnerDialRadius>
                                                    <rotaryControl:RotaryControl.InnerDialFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="DodgerBlue" Offset="0"/>
                                                            <GradientStop Color="Blue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.InnerDialFill>

                                                    <rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                        <system:Double>2</system:Double>
                                                    </rotaryControl:RotaryControl.OuterDialBorderThickness>
                                                    <rotaryControl:RotaryControl.OuterDialFill>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop Color="Black" Offset="0"/>
                                                            <GradientStop Color="DarkBlue" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </rotaryControl:RotaryControl.OuterDialFill>
                                                    <rotaryControl:RotaryControl.LayoutTransform>
                                                        <ScaleTransform  ScaleX="{Binding Size, ElementName=FixedCircleRadiusRC}" 
										                     ScaleY="{Binding Size, ElementName=FixedCircleRadiusRC}"/>
                                                    </rotaryControl:RotaryControl.LayoutTransform>
                                                </rotaryControl:RotaryControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
  </GroupBox>
 </StackPanel>
</UserControl>
