                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="DarkBlue" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </rotaryControl:RotaryControl.OuterDialFill>
                                <rotaryControl:RotaryControl.LayoutTransform>
                                    <ScaleTransform  ScaleX="{Binding Size, ElementName=YOscLevelRC}" 
										                                           ScaleY="{Binding Size, ElementName=YOscLevelRC}"/>
                                </rotaryControl:RotaryControl.LayoutTransform>
                            </rotaryControl:RotaryControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Modulation Sub-section container. -->
                <StackPanel HorizontalAlignment="Center" 
					                       Margin="0,0,0,0"
					                       Orientation="Vertical"
					                       VerticalAlignment="Center">
                    <Border Background="{StaticResource SubSectionBackground}" 
						                      BorderBrush="{StaticResource SubSectionBorder}" 
						                      BorderThickness="1" 
						                      CornerRadius="10" 
						                      Height="300" 
						                      HorizontalAlignment="Center"  
						                      Margin="3,0,0,0" 
						                      Panel.ZIndex="-1"
						                      ToolTip="{StaticResource LG_ToolTipText_ModS}"
						                      VerticalAlignment="Top"
						                      Width="180">
                        <StackPanel Margin="0,0,0,0" 
							                             Orientation="Vertical">
                            <Label Content="MODULATION" 
								                           FontFamily="Vrinda"
								                           Foreground="White"
								                           HorizontalAlignment="Center" 
								                           Margin="0,0,0,0" 
								                           ToolTip="Controls for positioning the image" 
								                           VerticalAlignment="Top"/>

                            <!-- Buttons container. -->
                            <StackPanel Margin="0,0,0,0" 
								                                Orientation="Horizontal">
                                <toggleSwitchControl:ToggleSwitchControl Height="80" 
									                                                                HorizontalAlignment="Left" 
									                                                                SwitchOn="False"
									                                                                ControlEnabled="True"
									                                                                LEDOffColor="eLEDRed"
									                                                                LEDOnColor="eLEDGreen"
									                                                                LegendBrush="White"
									                                                                LegendFontSize="10"
									                                                                SwitchLegendText="X"
									                                                                SwitchSize="32"
									                                                                TBClkd="XTSClkd"
									                                                                ToolTip="{StaticResource LG_ToolTipText_XModEnableTS}"
									                                                                Width="60"
									                                                                x:Name="XModEnabledTS"/>
